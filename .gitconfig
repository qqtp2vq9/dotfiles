[push]
	default = simple
[ghq]
	root = ~/src
[init]
	templatedir = ~/.git_tmp
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	editor = nvim
[commit]
	template = ~/.gitmessage.txt
    cleanup = strip

[url "https://"]
        insteadOf = git://
[alias]
	conflicted = !vim +Conflicted
[pager]
        branch = cat
        diff = delta
        log = delta
        reflog = delta
        show = delta

[interactive]
        diffFilter = delta --color-only

[delta]
        features = side-by-side line-numbers decorations
        whitespace-error-style = 22 reverse
        syntax-theme = GitHub

[diff]
